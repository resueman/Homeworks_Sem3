@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h3>Choose assembly to test:</h3>
    <div class="col">
        <div class="row">
            <form asp-action="LoadAssemblies" asp-controller="Home" method="post" enctype="multipart/form-data">
                <input type="file" name="assembly" accept=".dll"/>
                <input type="submit" value="Загрузить" />
            </form>
        </div>
        <div class="row mt-2">
            <form asp-action="RunTests" method="post">
                <input asp-action="RunTests" method="post" type="submit" value="Начать тестирование" />
            </form>
        </div>
    </div>
</div>
