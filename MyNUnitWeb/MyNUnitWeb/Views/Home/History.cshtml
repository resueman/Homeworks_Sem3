@model IEnumerable<Assembly>
@{
    ViewData["Title"] = "History";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>History</title>
</head>
<body>
    <h2>История всех протестированных сборок</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Имя сборки</th>
                <th>Количество пройденных тестов</th>
                <th>Количество проваленных тестов</th>
                <th>Количество проигнорированных тестов</th>
                <th>Подробнее</th>
            </tr>
        </thead>
        <tbody>
            @foreach (MyNUnitWeb.Models.Assembly a in Model)
            {
                <tr>
                    <td>@a.Name</td>
                    <td>@a.Tests.Count(t => t.ExecutionStatus == Methods.ExecutionStatus.Success)</td>
                    <td>@a.Tests.Count(t => t.ExecutionStatus == Methods.ExecutionStatus.Failed)</td>
                    <td>@a.Tests.Count(t => t.ExecutionStatus == Methods.ExecutionStatus.Ignored)</td>
                    <td><a href="~/History/Details/@a.Id">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>