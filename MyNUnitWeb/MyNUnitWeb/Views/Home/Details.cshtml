@model Assembly
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <h2>Тесты сборки @Model.Name</h2>
    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th>Имя теста</th>
                <th>Время выполнения</th>
                <th>Результат выполнения</th>
                <th>Сообщение</th>
            </tr>
        </thead>
        <tbody>
            @{var i = 1;}
            @foreach (var test in Model.Tests)
            {
                var src = test.ExecutionStatus == Methods.ExecutionStatus.Success
                    ? "/success.ico"
                    : test.ExecutionStatus == Methods.ExecutionStatus.Failed
                        ? "/fail.ico"
                        : "/ignored.png";
                <tr>
                    <td>@i</td>
                    <td>@test.Name</td>
                    <td>@test.ExecutionTime</td>
                    <td><img width="15" src="@src"/></td>
                    <td>@test.Message</td>
                </tr>                
                ++i;                      
            }
        </tbody>
    </table>
</body>
</html>